<% if current_user.favorite?(post) %>
  <%= form_for(current_user.favorites.find_by(micropost_id: post.id), html: { method: :delete }) do |f| %>
    <%= hidden_field_tag :micropost_id, post.id %>
    <%= f.submit 'unfavo', class: 'btn btn-danger btn-block' %>
  <% end %>
<% else %>
  <%= form_for(current_user.relationships.build) do |f| %>
    <%= hidden_field_tag :micropost_id, post.id %>
    <%= f.submit 'favo', class: 'btn btn-primary btn-block' %>
  <% end %>
<% end %>
